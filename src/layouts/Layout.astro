---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Un espacio para compartir novedades, noticias y eventos de la comunidad de ajedrez universitaria." } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/ajedrezfamaf.jpg" />
    <meta property="og:url" content="https://ajedrezfamaf.com" />
    
    <!-- Twitter -->
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/ajedrezfamaf.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <slot />
  </body>
</html>

<script>
  // Asegurar que todos los enlaces externos se abran en nueva pestaña
  document.addEventListener('DOMContentLoaded', function() {
    const externalLinks = document.querySelectorAll('.document a[href^="http"]');
    externalLinks.forEach(link => {
      link.setAttribute('target', '_blank');
      link.setAttribute('rel', 'noopener noreferrer');
    });

    // Forzar espaciado en imágenes
    const images = document.querySelectorAll('.document img');
    images.forEach(img => {
      img.style.marginTop = '2rem';
      img.style.marginBottom = '1.5rem';
      img.style.display = 'block';
      img.style.borderRadius = '12px';
      
      // Si la imagen está dentro de un enlace, agregar cursor pointer
      const parentLink = img.closest('a');
      if (parentLink) {
        parentLink.style.cursor = 'pointer';
      }
    });

    // Forzar espaciado en párrafos que contienen imágenes
    const paragraphsWithImages = document.querySelectorAll('.document p:has(img)');
    paragraphsWithImages.forEach(p => {
      p.style.marginTop = '2rem';
      p.style.marginBottom = '1.5rem';
    });
  });
</script>

